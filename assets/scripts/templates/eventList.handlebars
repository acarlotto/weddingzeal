<div class="listview">
  <div class="list-header">

        <h3>Todo List<a id="createEventButton" title="Create a list" role="button">       <i class="fa fa-plus-square" aria-hidden="true"></i></a></h3>

</div>


<div class="list">
        <!-- <button type="Submit" id='eventsShow' class="btn btn-info">View list >></button> -->

          <ul>
            {{#if events}}
              {{#each events}}
               <li data-id="{{id}}" {{#if packed}}class="packed"{{/if}}><input type="checkbox" {{#if packed}}checked{{/if}} class="pack-content"> {{title}}
               <a href="" class="deleteEvent" data-id={{id}}><i class="fa fa-trash-o" aria-hidden="true"></i></a>
             <a href="" class="edit" data-id={{id}} data-title="{{title}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
           </li>

              <hr>
              {{/each}}
            {{else}}
              <p>Start your list.</p>
            {{/if}}
          </ul>
    </div>
</div>
